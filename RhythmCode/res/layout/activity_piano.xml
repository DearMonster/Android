<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="50dp" android:orientation="horizontal">
		<Button android:id="@+id/left" 
		    android:background="@drawable/left"
			android:layout_width="wrap_content" 
			android:layout_height="50dp">
		    
		</Button>
		
		<Button android:id="@+id/right" 
		    android:background="@drawable/right"
			android:layout_width="wrap_content" 
			android:layout_height="50dp">
		    
		</Button>
		
		<Button android:id="@+id/record" 
		    android:background="@drawable/log"
			android:layout_width="36dp" 
			android:layout_height="36dp"
			android:layout_marginBottom="10dp">
		    
		</Button>
	</LinearLayout>

	<com.cz.piano.PianoSurfaceView
		android:id="@+id/pianoSurfaceView1" android:layout_width="wrap_content"
		android:layout_height="wrap_content">
	    
	</com.cz.piano.PianoSurfaceView>

</LinearLayout>
